{
    "extends": "../../packages/typescript-config/base.json",
    "compilerOptions": {
      "target": "ES2020", 
      "lib": ["ES2020"], 
      "module": "CommonJS", 
      "moduleResolution": "node", 
      "outDir": "./dist", 
      "rootDir": "./src", 
      "sourceMap": true, 
      "esModuleInterop": true, 
      "forceConsistentCasingInFileNames": true,
      "strict": true, 
      "skipLibCheck": true, 
      "composite": false
    },
    "include": ["src/**/*.ts"], 
    "exclude": ["node_modules", "dist", "build", "**/*.test.ts"] 
  }